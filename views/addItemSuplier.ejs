<html>
<%- include partial/header %>
<body>
  <%-include partial/menu%>
  <div class="container">
      <h2>Add Item For Supplier</h2>
      <h3><a href="/suppliers/"<%=supplier.id%>>Show All Data</a></h3>
      <%if(err){  %>
        <div id="info"><%=error%></div>
      <%} %>
        <form action="/suppliers/add" method="post">
          <div>
            <label><b>Nama Suppliers<b></label><br>
            <input type="text" name="name" placeholder="Nama Supplier">
          </div>
          <div>
            <label><b>Kota<b></label><br>
            <input type="text" name="kota" placeholder="Kota">
          </div>

          <button type="submit" name="submit">Add</button>
      </form>
  </div>
</body>
</html>
